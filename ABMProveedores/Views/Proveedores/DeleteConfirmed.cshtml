@model ABMProveedores.Models.Proveedor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Proveedor Confirmado</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="ruta/a/tu/archivo/css/styles.css">
    <style>
        .card {
            max-width: 500px;
            margin: 0 auto;
        }

        .btn-back {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center mb-4">Eliminar Proveedor Confirmado</h2>
                <h4 class="card-title">Proveedor</h4>
                <hr>
                <dl class="row">
                    <dt class="col-sm-2">Nombre:</dt>
                    <dd class="col-sm-10">@Model.Nombre</dd>
                    <!-- Agrega otras propiedades del proveedor aquí -->
                </dl>

                <form asp-action="DeleteConfirmed" asp-controller="Proveedores" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary btn-back">
                            Volver a la lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
